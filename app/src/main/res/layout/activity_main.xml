<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0"
        android:textSize = "30sp"
        android:gravity="right"

        />
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="0"
        android:textSize = "70sp"
        android:gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        >

        <android.widget.Button

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MC"
            android:background="@drawable/my_button"

            android:textSize="20sp" />


        <android.widget.Button
            android:id="@+id/buy_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/my_button"
            android:layout_weight="1"
            android:text="MR"
            android:textSize="20sp"

            />

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="M+"
            android:background="@drawable/my_button"
            android:textSize="20sp" />

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/my_button"
            android:layout_weight="1"
            android:text="M-"
            android:textSize="20sp" />

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/my_button"
            android:layout_weight="1"
            android:text="MS"
            android:textSize="20sp" />

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:text="M"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/my_button"
            android:text="%"
            android:onClick="PersClick"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:background="@drawable/my_button"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="deleteEvent"
            android:text="CE"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:onClick="deleteEvent"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:text="&lt;="
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1/x"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x^2"
            android:background="@drawable/my_button"
            android:onClick="stepenclick"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:text="√x"
            android:onClick="CorenClick"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:onClick="OperClick"
            android:id="@+id/delitel"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:id="@+id/Seven"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/secdraw"
            android:onClick="onOperationClick"
            android:text="8"
            android:id="@+id/Eight"
            android:textSize="25dp" />

        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperationClick"
            android:text="9"
            android:id="@+id/Nine"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×"
            android:onClick="OperClick"
            android:id="@+id/multi"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:id="@+id/Fore"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:id="@+id/Five"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:id="@+id/Six"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:text="-"
            android:onClick="OperClick"
            android:id="@+id/minus"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"

            android:id="@+id/One"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:id="@+id/Two"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:id="@+id/Tri"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:onClick="OperClick"
            android:id="@+id/plus"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/Zero"
            android:onClick="onOperationClick"
            android:background="@drawable/secdraw"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=","
            android:background="@drawable/my_button"
            android:textSize="25dp"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:onClick="Result"
            android:background="@drawable/my_button"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>

